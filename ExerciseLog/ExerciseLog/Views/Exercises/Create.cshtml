@using System.Globalization
@model ExerciseLog.Models.Exercise

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Exercise</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Exercise_Date" class="control-label"></label>
                <input asp-for="Exercise_Date" class="form-control" value="@DateTime.Now.ToString("dd.MM.yyyy HH:mm")" readonly="readonly"/>
                <span asp-validation-for="Exercise_Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Run_Distance" class="control-label"></label>
                <input asp-for="Run_Distance" class="form-control"/>
                <span asp-validation-for="Run_Distance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Run_Duration" class="control-label"></label>
                <input asp-for="Run_Duration" class="form-control"/>
                <span asp-validation-for="Run_Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pushup_Count" class="control-label"></label>
                <input asp-for="Pushup_Count" class="form-control"/>
                <span asp-validation-for="Pushup_Count" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plank_Duration" class="control-label"></label>
                <input asp-for="Plank_Duration" class="form-control"/>
                <span asp-validation-for="Plank_Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control"/>
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}